

#include "Drzewo.h"

Drzewo::Drzewo() {
	rozmiar=0;

	straznik.kolor='B';							//tworzenie straznika
	straznik.lewo=&straznik;
	straznik.prawo=&straznik;
	straznik.rodzic=&straznik;
	korzen=&straznik;

}

Drzewo::~Drzewo() {
	if(korzen){
		usunDrzewo();
	}
}

void Drzewo::dodaj(int wartosc){

	DrzewoElement *X, *Y;

	X=new DrzewoElement;						//tworzymy nowy węzeł dla drzewa
	X->wartosc=wartosc;
	X->rodzic=korzen;
	X->lewo=&straznik;
	X->prawo=&straznik;


}
